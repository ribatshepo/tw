# USP Service Environment Variables - Example
# Copy this file to .env and fill in the actual values
# NEVER commit .env file with real secrets to version control

# Database Configuration
USP_Database__Host=localhost
USP_Database__Port=5432
USP_Database__Database=usp_db
USP_Database__Username=usp_user
USP_Database__Password=your-secure-database-password-here

# JWT Configuration
USP_Jwt__Algorithm=HS256
USP_Jwt__Secret=your-jwt-secret-min-32-chars-generate-with-openssl-rand-base64-64
USP_Jwt__Issuer=usp-service
USP_Jwt__Audience=usp-clients
USP_Jwt__AccessTokenExpirationMinutes=15
USP_Jwt__RefreshTokenExpirationDays=7

# Redis Configuration
USP_Redis__Host=localhost
USP_Redis__Port=6379
USP_Redis__Password=your-redis-password-here
USP_Redis__Database=0

# RabbitMQ Configuration
USP_RabbitMQ__HostName=localhost
USP_RabbitMQ__Port=5672
USP_RabbitMQ__UserName=usp_user
USP_RabbitMQ__Password=your-rabbitmq-password-here
USP_RabbitMQ__VirtualHost=/

# Email Configuration (Optional)
USP_Email__SmtpHost=smtp.gmail.com
USP_Email__SmtpPort=587
USP_Email__SmtpUsername=your-email@example.com
USP_Email__SmtpPassword=your-smtp-password-or-app-specific-password
USP_Email__FromEmail=noreply@usp.local
USP_Email__EnableSsl=true

# WebAuthn Configuration
USP_WebAuthn__RelyingPartyId=localhost
USP_WebAuthn__Origin=https://localhost:8443

# TLS Certificate Paths
USP_TLS_CERT_PATH=/app/certs/usp.crt
USP_TLS_KEY_PATH=/app/certs/usp.key

# Observability
USP_ELASTICSEARCH_URI=http://localhost:9200
USP_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS
USP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
