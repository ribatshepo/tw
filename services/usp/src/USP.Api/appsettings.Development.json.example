{
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "usp_db",
    "Username": "usp_user",
    "IncludeErrorDetail": true
  },
  "Jwt": {
    "Issuer": "usp-dev",
    "Audience": "usp-dev-clients",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "Grpc": "Debug"
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      },
      "Https": {
        "Url": "https://*:8443"
      },
      "Grpc": {
        "Url": "http://*:50005",
        "Protocols": "Http2"
      },
      "Metrics": {
        "Url": "http://*:9090"
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173", "http://localhost:4200" ]
  }
}
