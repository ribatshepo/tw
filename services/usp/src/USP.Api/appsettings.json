{
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "usp_db",
    "Username": "usp_user",
    "Password": "",
    "IncludeErrorDetail": false,
    "Timeout": 30,
    "MinPoolSize": 1,
    "MaxPoolSize": 100
  },
  "Jwt": {
    "Algorithm": "HS256",
    "Secret": "",
    "Issuer": "usp-service",
    "Audience": "usp-clients",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "PrivateKeyPath": "/app/certs/jwt-private.pem"
  },
  "Redis": {
    "Host": "localhost",
    "Port": 6379,
    "Password": "",
    "Database": 0,
    "UseSsl": false,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AllowAdmin": false,
    "InstanceName": "USP:"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@usp.local",
    "FromName": "USP Security Platform",
    "EnableSsl": true,
    "MagicLinkExpirationMinutes": 15
  },
  "WebAuthn": {
    "RelyingPartyId": "localhost",
    "RelyingPartyName": "USP - Unified Security Platform",
    "Origin": "https://localhost:8443",
    "TimestampDriftTolerance": 300000,
    "ChallengeExpirationMinutes": 5
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "usp_user",
    "Password": "",
    "VirtualHost": "/",
    "UseSsl": false,
    "ConnectionTimeout": 30,
    "HeartbeatInterval": 60,
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryInterval": 5
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/usp-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "usp-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "OpenTelemetry": {
    "ServiceName": "usp-service",
    "ServiceVersion": "1.0.0",
    "JaegerEndpoint": "http://localhost:14268/api/traces"
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:8443",
        "Certificate": {
          "Path": "/app/certs/usp.crt",
          "KeyPath": "/app/certs/usp.key"
        }
      },
      "Http": {
        "Url": "http://*:8080"
      },
      "Grpc": {
        "Url": "https://*:50005",
        "Protocols": "Http2",
        "Certificate": {
          "Path": "/app/certs/usp.crt",
          "KeyPath": "/app/certs/usp.key"
        }
      },
      "Metrics": {
        "Url": "http://*:9090"
      }
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173" ]
  }
}
