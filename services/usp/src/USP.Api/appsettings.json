{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${POSTGRES_HOST:-localhost};Port=${POSTGRES_PORT:-5432};Database=${USP_DB_NAME:-usp_db};Username=${USP_DB_USER:-usp_user};Password=${USP_DB_PASSWORD:-changeme};Include Error Detail=true"
  },
  "Jwt": {
    "Algorithm": "HS256",
    "Secret": "${JWT_SECRET:-your-super-secret-jwt-key-min-32-chars-long-change-in-production}",
    "Issuer": "${JWT_ISSUER:-usp-service}",
    "Audience": "${JWT_AUDIENCE:-usp-clients}",
    "AccessTokenExpirationMinutes": "${JWT_ACCESS_TOKEN_EXPIRATION:-15}",
    "RefreshTokenExpirationDays": "${JWT_REFRESH_TOKEN_EXPIRATION:-7}",
    "PrivateKeyPath": "${JWT_PRIVATE_KEY_PATH:-/app/certs/jwt-private.pem}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING:-localhost:6379,password=${REDIS_PASSWORD:-changeme}}"
  },
  "Email": {
    "SmtpHost": "${SMTP_HOST:-smtp.gmail.com}",
    "SmtpPort": "${SMTP_PORT:-587}",
    "SmtpUsername": "${SMTP_USERNAME:-}",
    "SmtpPassword": "${SMTP_PASSWORD:-}",
    "FromEmail": "${SMTP_FROM_EMAIL:-noreply@usp.local}",
    "FromName": "${SMTP_FROM_NAME:-USP Security Platform}",
    "EnableSsl": "${SMTP_ENABLE_SSL:-true}",
    "MagicLinkExpirationMinutes": 15
  },
  "WebAuthn": {
    "RelyingPartyId": "${WEBAUTHN_RP_ID:-localhost}",
    "RelyingPartyName": "USP - Unified Security Platform",
    "Origin": "${WEBAUTHN_ORIGIN:-https://localhost:8443}",
    "TimestampDriftTolerance": 300000,
    "ChallengeExpirationMinutes": 5
  },
  "RabbitMQ": {
    "HostName": "${RABBITMQ_HOST:-localhost}",
    "Port": "${RABBITMQ_PORT:-5672}",
    "UserName": "${RABBITMQ_DEFAULT_USER:-guest}",
    "Password": "${RABBITMQ_DEFAULT_PASS:-guest}",
    "VirtualHost": "${RABBITMQ_VHOST:-/}"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/usp-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "${ELASTICSEARCH_URI:-http://localhost:9200}",
          "indexFormat": "usp-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "OpenTelemetry": {
    "ServiceName": "usp-service",
    "ServiceVersion": "1.0.0",
    "JaegerEndpoint": "${JAEGER_ENDPOINT:-http://localhost:14268/api/traces}"
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:8443",
        "Certificate": {
          "Path": "${TLS_CERT_PATH:-/app/certs/usp.crt}",
          "KeyPath": "${TLS_KEY_PATH:-/app/certs/usp.key}"
        }
      },
      "Http": {
        "Url": "http://*:8080"
      },
      "Grpc": {
        "Url": "https://*:50005",
        "Protocols": "Http2",
        "Certificate": {
          "Path": "${TLS_CERT_PATH:-/app/certs/usp.crt}",
          "KeyPath": "${TLS_KEY_PATH:-/app/certs/usp.key}"
        }
      },
      "Metrics": {
        "Url": "http://*:9090"
      }
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "${CORS_ALLOWED_ORIGINS:-http://localhost:3000,http://localhost:5173}" ]
  }
}
