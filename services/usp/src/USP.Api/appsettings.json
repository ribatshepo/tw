{
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "usp_db",
    "Username": "usp_user",
    "Password": "",
    "IncludeErrorDetail": false,
    "Timeout": 30,
    "MinPoolSize": 1,
    "MaxPoolSize": 100
  },
  "Jwt": {
    "Algorithm": "HS256",
    "Secret": "",
    "Issuer": "usp-service",
    "Audience": "usp-clients",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "PrivateKeyPath": "/app/certs/jwt-private.pem"
  },
  "Redis": {
    "Host": "localhost",
    "Port": 6379,
    "Password": "",
    "Database": 0,
    "UseSsl": false,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AllowAdmin": false,
    "InstanceName": "USP:"
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@usp.local",
    "FromName": "USP Security Platform",
    "EnableSsl": true,
    "MagicLinkExpirationMinutes": 15
  },
  "WebAuthn": {
    "RelyingPartyId": "localhost",
    "RelyingPartyName": "USP - Unified Security Platform",
    "Origin": "https://localhost:8443",
    "TimestampDriftTolerance": 300000,
    "ChallengeExpirationMinutes": 5
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "usp_user",
    "Password": "",
    "VirtualHost": "/",
    "UseSsl": false,
    "ConnectionTimeout": 30,
    "HeartbeatInterval": 60,
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryInterval": 5
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/usp-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "usp-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jaeger": {
    "Host": "localhost",
    "Port": 6831,
    "HttpPort": 14268,
    "ServiceName": "usp-api",
    "ServiceVersion": "1.0.0",
    "SamplingRatio": 0.1
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:8443",
        "Certificate": {
          "Path": "/app/certs/usp.crt",
          "KeyPath": "/app/certs/usp.key"
        }
      },
      "Http": {
        "Url": "http://*:8080"
      },
      "Grpc": {
        "Url": "https://*:50005",
        "Protocols": "Http2",
        "Certificate": {
          "Path": "/app/certs/usp.crt",
          "KeyPath": "/app/certs/usp.key"
        }
      },
      "Metrics": {
        "Url": "http://*:9090"
      }
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173" ]
  },
  "RateLimiting": {
    "EnableGlobalRateLimiting": true,
    "EnablePerUserRateLimiting": true,
    "EnablePerIpRateLimiting": true,
    "EnablePerEndpointRateLimiting": true,
    "PerUserRequestsPerMinute": 100,
    "PerUserRequestsPerHour": 5000,
    "PerIpRequestsPerMinute": 200,
    "PerIpRequestsPerHour": 10000,
    "GlobalRequestsPerSecond": 5000,
    "BurstAllowancePercentage": 20,
    "LoginRequestsPerMinute": 10,
    "MfaRequestsPerMinute": 20,
    "SecretsRequestsPerMinute": 1000,
    "ViolationPenaltyMinutes": 15,
    "ViolationsBeforePenalty": 3,
    "UseSlidingWindow": true
  },
  "IpFiltering": {
    "EnableWhitelist": false,
    "EnableBlacklist": true,
    "EnableGeoBlocking": false,
    "TemporaryBanDurationMinutes": 15,
    "FailedAttemptsBeforeBan": 5,
    "FailedAttemptsWindowMinutes": 10,
    "WhitelistIps": [],
    "BlacklistIps": [],
    "BlockedCountries": [],
    "GeoIp2DatabasePath": "/app/data/GeoLite2-Country.mmdb"
  },
  "RequestSigning": {
    "EnableSignatureVerification": false,
    "MaxTimestampDriftSeconds": 300,
    "SignatureHeader": "X-Signature",
    "TimestampHeader": "X-Timestamp",
    "NonceHeader": "X-Nonce",
    "ApiKeyIdHeader": "X-Api-Key-Id",
    "NonceExpirationSeconds": 600,
    "HashAlgorithm": "HMACSHA256",
    "RequiredSigningEndpoints": [],
    "ExemptSigningEndpoints": [
      "/health",
      "/health/live",
      "/health/ready",
      "/swagger",
      "/api/auth/login",
      "/api/auth/register"
    ]
  },
  "ApiThreatProtection": {
    "EnableSqlInjectionDetection": true,
    "EnableXssDetection": true,
    "EnablePathTraversalDetection": true,
    "EnableJsonDepthLimiting": true,
    "EnableHeaderValidation": true,
    "EnableSuspiciousPatternDetection": true,
    "MaxJsonDepth": 10,
    "MaxRequestBodySize": 4194304,
    "MaxHeaderSize": 8192,
    "MaxHeaderCount": 100,
    "RapidRequestThreshold": 50,
    "RapidRequestWindowSeconds": 1,
    "BlockOnThreatDetection": true
  },
  "MTls": {
    "AllowSelfSignedInDevelopment": true,
    "TrustedIssuers": []
  },
  "TenantSettings": {
    "SystemDomains": [
      "localhost",
      "127.0.0.1"
    ]
  },
  "MfaSettings": {
    "YubicoClientId": "",
    "YubicoSecretKey": "",
    "YubicoApiUrls": [
      "https://api.yubico.com/wsapi/2.0/verify",
      "https://api2.yubico.com/wsapi/2.0/verify",
      "https://api3.yubico.com/wsapi/2.0/verify",
      "https://api4.yubico.com/wsapi/2.0/verify",
      "https://api5.yubico.com/wsapi/2.0/verify"
    ],
    "YubicoTimeoutSeconds": 15,
    "PushNotificationProvider": "FCM",
    "FcmServiceAccountKeyPath": "",
    "ApnsKeyPath": "",
    "ApnsKeyId": "",
    "ApnsTeamId": "",
    "ApnsBundleId": "",
    "ApnsUseSandbox": true
  }
}
