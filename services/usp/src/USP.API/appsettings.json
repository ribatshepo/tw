{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=usp_db;Username=usp_user;Password=;SSL Mode=Disable;Maximum Pool Size=100;Minimum Pool Size=10"
  },
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "usp_db",
    "Username": "usp_user",
    "Password": "",
    "EnableSsl": false,
    "MaxPoolSize": 100,
    "MinPoolSize": 10,
    "CommandTimeout": 30
  },
  "Redis": {
    "Host": "localhost",
    "Port": 6379,
    "Password": "",
    "EnableSsl": false,
    "InstanceName": "USP:",
    "Database": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000
  },
  "Jwt": {
    "Issuer": "security-usp",
    "Audience": "security-api",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "Algorithm": "RS256",
    "PublicKeyPath": "/etc/usp/keys/jwt-public.pem",
    "PrivateKeyPath": "/etc/usp/keys/jwt-private.pem",
    "RefreshTokenLength": 64
  },
  "Observability": {
    "ElasticsearchUri": "http://localhost:9200",
    "JaegerAgentHost": "localhost",
    "JaegerAgentPort": 6831,
    "PrometheusEndpoint": "/metrics",
    "LogIndexFormat": "usp-logs-{0:yyyy.MM.dd}"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://+:5000"
      }
    }
  },
  "HealthChecks": {
    "TimeoutSeconds": 10,
    "IntervalSeconds": 30
  }
}
