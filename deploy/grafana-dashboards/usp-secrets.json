{
  "dashboard": {
    "title": "USP - Secrets Management",
    "tags": ["usp", "security", "secrets", "vault"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Secret Operations Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(usp_secret_operations_total[5m])",
            "legendFormat": "{{engine}} - {{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Operations by Engine",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum by (engine) (rate(usp_secret_operations_total[5m]))",
            "legendFormat": "{{engine}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Transit Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(usp_transit_operations_total[5m])",
            "legendFormat": "{{operation}} - {{key}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Secret Rotations by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(usp_secret_rotations_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Rotations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "PKI - Certificates Issued",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "increase(usp_certificates_issued_total[1h])",
            "legendFormat": "Issued (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 6,
        "title": "PKI - Certificates Revoked",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "increase(usp_certificates_revoked_total[1h])",
            "legendFormat": "Revoked (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Secret Versions Created",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "increase(usp_secret_versions_created_total[1h])",
            "legendFormat": "Versions (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 8,
        "title": "Database Credentials Issued",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "increase(usp_database_credentials_issued_total[1h])",
            "legendFormat": "Credentials (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 9,
        "title": "Database Credentials by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(usp_database_credentials_issued_total[5m])",
            "legendFormat": "{{database}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Credentials/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Top 10 Most Accessed Secret Paths",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "topk(10, sum by (path) (rate(usp_secret_access_total[5m])))",
            "legendFormat": "{{path}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "path": "Secret Path",
                "Value": "Access Rate (ops/sec)"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "title": "Operations by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum by (operation) (rate(usp_secret_operations_total[5m]))",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Certificates Issued Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "rate(usp_certificates_issued_total[5m])",
            "legendFormat": "Issued",
            "refId": "A"
          },
          {
            "expr": "rate(usp_certificates_revoked_total[5m])",
            "legendFormat": "Revoked",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Certificates/sec"},
          {"format": "short"}
        ]
      }
    ]
  }
}
