{
  "dashboard": {
    "title": "USP - Privileged Access Management (PAM)",
    "tags": ["usp", "security", "pam", "privileged-access"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Currently Checked Out Accounts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "usp_pam_checked_out",
            "legendFormat": "Checked Out",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Checkout Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(usp_pam_checkouts_total[5m])",
            "legendFormat": "Checkouts/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "title": "Break-Glass Activations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "increase(usp_pam_break_glass_activations_total[1h])",
            "legendFormat": "Activations (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active PAM Sessions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(usp_pam_sessions_total[5m]))",
            "legendFormat": "Sessions/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "title": "Checkouts by Safe",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(usp_pam_checkouts_total[5m])",
            "legendFormat": "{{safe}} / {{account}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Checkouts/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "PAM Sessions by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(usp_pam_sessions_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Sessions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Session Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(usp_pam_session_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(usp_pam_session_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(usp_pam_session_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Password Rotations by Connector",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(usp_pam_password_rotations_total[5m])",
            "legendFormat": "{{connector}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Rotations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "JIT Access Requests by Result",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum by (result) (rate(usp_pam_jit_access_requests_total[5m]))",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Approval Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(usp_pam_approval_requests_total[5m])",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Top 10 Most Checked Out Accounts",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum by (safe, account) (rate(usp_pam_checkouts_total[1h])))",
            "legendFormat": "{{safe}} / {{account}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "safe": "Safe",
                "account": "Account",
                "Value": "Checkouts (1h)"
              }
            }
          }
        ]
      },
      {
        "id": 12,
        "title": "Password Rotation Success Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(usp_pam_password_rotations_total[5m]))",
            "legendFormat": "Rotations/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      }
    ]
  }
}
