{
  "dashboard": {
    "title": "USP - Authentication & MFA",
    "tags": ["usp", "security", "authentication", "mfa"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Login Success Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(usp_login_attempts_total{result=\"success\"}[5m])) / sum(rate(usp_login_attempts_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "MFA Success Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(usp_mfa_verifications_total{result=\"success\"}[5m])) / sum(rate(usp_mfa_verifications_total[5m])) * 100",
            "legendFormat": "MFA Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Sessions",
        "type": "graph",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "usp_active_sessions",
            "legendFormat": "Active Sessions",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Sessions"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Account Lockouts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "increase(usp_account_lockouts_total[1h])",
            "legendFormat": "Lockouts (1h)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Login Attempts by Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(usp_login_attempts_total[5m])",
            "legendFormat": "{{method}} - {{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Attempts/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Login Attempts by Result",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum by (result) (rate(usp_login_attempts_total[5m]))",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "MFA Verification by Method",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(usp_mfa_verifications_total[5m])",
            "legendFormat": "{{method}} - {{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Verifications/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Authentication Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(usp_authentication_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(usp_authentication_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(usp_authentication_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "OAuth Authorizations by Provider",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(usp_oauth_authorizations_total[5m])",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Authorizations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "WebAuthn Ceremonies",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(usp_webauthn_ceremonies_total[5m])",
            "legendFormat": "{{type}} - {{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Ceremonies/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Password Reset Requests",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "rate(usp_password_reset_requests_total[5m])",
            "legendFormat": "Reset Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Top 10 Failed Login Methods",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "topk(10, sum by (method) (rate(usp_login_attempts_total{result=\"failure\"}[5m])))",
            "legendFormat": "{{method}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "method": "Method",
                "Value": "Failures/sec"
              }
            }
          }
        ]
      }
    ]
  }
}
